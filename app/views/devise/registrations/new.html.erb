<div class="skinny-container">
  <div class="central-container">
    <div class="container-title">Sign up</div>
    <div class="content">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="cell">
          <div class="form-field">
            <%= f.label :name %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", data: parsley(:required) %>
          </div>

          <div class="form-field">
            <%= f.label :email %>
            <%= f.email_field :email, autocomplete: "email", data: parsley(:required) %>
          </div>

          <div class="form-field">
            <%= f.label :phone %>
            <%= f.text_field :phone, autocomplete: "phone_number", data: parsley(:required) %>
          </div>

          <div class="form-field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="form-field">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="text-center">
            <div class="actions">
              <%= f.submit "Sign up" %>
            </div>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
